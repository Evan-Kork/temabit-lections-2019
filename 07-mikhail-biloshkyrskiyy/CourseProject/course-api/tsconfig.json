{
    "compilerOptions": {
        "outDir": "./dist/",

        "target": "es5",
        "module": "commonjs",

        "jsx": "react",
        "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,

        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "forceConsistentCasingInFileNames": true,

        "baseUrl": "./",
        "paths": {
            "@/*": ["./*"],
        }
    }
}